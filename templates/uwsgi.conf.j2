{% set app = salt['pillar.get']('flaskApp:app_name') %}
{% set http_port = salt['pillar.get']('flaskApp:http_port') %}
{% set user = salt['pillar.get']('flaskApp:user') %}
{% set group = salt['pillar.get']('flaskApp:group') %}

[uwsgi]
chdir           = /var/www/{{ app }}
module          = app:app
home            = /var/www/{{ app }}
master          = False
socket          = /run/{{ app }}/uwsgi.sock
chmod-socket    = 666
processes       = 4
threads         = 2
http            = {{ http_port }}
uid             = {{ user }}
gid             = {{ user }}
vacuum          = true
enable-threads  = true
pidfile         = /run/{{ app }}/uwsgi.pid